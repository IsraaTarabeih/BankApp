@inject BankApp.Interface.IPinLockService Pin
@inject NavigationManager Nav

@*
    <summary>
        Navigation menu for the BankApp.
        Shows links to different pages and controls the menu visibility.
    </summary>
*@
<div class="top-row ps-4 navbar navbar-dark">
    <div class="container-fluid">
        @* App title and button to show or hide the menu. *@
        <a class="navbar-brand" href="">BankApp</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        @* Navigation links. *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Weather">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="CreateAccount">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Skapa konto
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Accounts">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Konton
            </NavLink>
        </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/transactions/new">
                    <span class="bi bi-arrow-left-right nav-menu" aria-hidden="true"></span> Ny transaktion
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/transactions/history">
                    <span class="bi bi-clock-history nav-menu" aria-hidden="true"></span> Historik
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <button class="nav-link btn btn-link" @onclick="LockNow" aria-hidden="true">
                    Lås (logga ut)
                </button>
            </div>
    </nav>
</div>

@code {
    // Keeps track of whether the menu is open or closed.
    private bool collapseNavMenu = true;

    // Chooses which CSS class to use based on if the menu is open or closed.
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    // Switches the menu between open and closed.
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    // Locks the app and redirects the user back to the login page.
    private async Task LockNow()
    {
        await Pin.LockAsync();
        Nav.NavigateTo("/login");
    }
}